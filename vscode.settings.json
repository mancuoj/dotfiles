{
  // Extensions
  "extensions.ignoreRecommendations": true,
  "typeChallenges.workspaceFolder": "/home/mancuoj/Projects/type-challenges",
  "errorLens.excludeBySource": ["cSpell"],
  "symbols.hidesExplorerArrows": false,
  "css.lint.unknownAtRules": "ignore",
  "sortcss.sortOnSave": true,
  "sortcss.sortingStrategy": "smacss",
  "tailwind-raw-reorder.runOnSave": true,
  "tailwind-raw-reorder.IgnoreConfigNotFound": true,
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.experimental.classRegex": [
    ["clsx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],

  "leetcode.endpoint": "leetcode-cn",
  "leetcode.useWsl": true,
  "leetcode.defaultLanguage": "javascript",
  "leetcode.workspaceFolder": "/home/mancuoj/Projects/leetcode",
  "leetcode.showDescription": "In File Comment",
  "leetcode.hint.configWebviewMarkdown": false,
  "leetcode.hint.commentDescription": false,
  "leetcode.hint.commandShortcut": false,
  "leetcode.hint.setDefaultLanguage": false,

  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": true
  },

  "cSpell.userWords": [
    "antfu",
    "btn",
    "clsx",
    "daisyui",
    "leetcode",
    "mancuoj",
    "nums",
    "tailwindcss",
    "todos",
    "tsup"
  ],

  // Formatters
  "editor.formatOnSave": true,
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all",
  "[json][jsonc][html][css][markdown][javascript][javascriptreact][typescript][typescriptreact][vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Others
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",

  "git.confirmSync": false,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.readonlyFromPermissions": true,
  "files.readonlyInclude": {
    "**/node_modules/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/yarn.lock": true
  },
  "search.exclude": {
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/yarn.lock": true
  },

  // Editor
  "editor.fontFamily": "'MonoLisa', 'Nova Nerd Font', 'Monaspace Argon', '霞鹜文楷'",
  "editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'ss06', 'zero'",
  "editor.tabSize": 2,
  "editor.fontSize": 18,
  "editor.fontWeight": "700",
  "editor.lineHeight": 1.7,
  "editor.lineNumbers": "interval",
  "editor.mouseWheelZoom": true,
  "editor.suggestSelection": "first",
  "editor.suggest.insertMode": "replace",
  "editor.guides.indentation": true,
  "editor.guides.bracketPairs": false,
  "editor.linkedEditing": true,
  "editor.dragAndDrop": false,
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "name": "Comment Italics",
        "scope": ["comment", "punctuation.definition.comment"],
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },

  // Terminal
  "terminal.integrated.fontFamily": "'Mononoki Nerd Font', 'Maple UI'",
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.lineHeight": 1.35,
  "terminal.integrated.mouseWheelZoom": true,
  "terminal.integrated.allowChords": false,

  // Smooth
  "editor.smoothScrolling": true,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "terminal.integrated.smoothScrolling": true,
  "workbench.list.smoothScrolling": true,

  // Explorer
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.confirmPasteNative": false,
  "explorer.compactFolders": false,

  // Workbench
  "window.zoomLevel": 1,
  "editor.minimap.enabled": false,
  "breadcrumbs.enabled": false,
  "security.workspace.trust.enabled": false,
  "window.menuBarVisibility": "toggle",
  "workbench.startupEditor": "none",
  "workbench.layoutControl.enabled": false,
  "workbench.editor.closeOnFileDelete": true,
  "workbench.tree.enableStickyScroll": true,
  "workbench.activityBar.location": "top",
  "workbench.sideBar.location": "right",
  "workbench.productIconTheme": "icons-carbon",
  "window.autoDetectColorScheme": true,
  "workbench.preferredLightColorTheme": "Default Light Modern",
  "workbench.preferredDarkColorTheme": "Moegi Black",
  "workbench.iconTheme": "symbols",
  "workbench.colorTheme": "Moegi Black"
}
