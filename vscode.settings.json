{
  // Extensions
  "extensions.ignoreRecommendations": true,
  "symbols.hidesExplorerArrows": false,
  "typeChallenges.workspaceFolder": "/home/mancuoj/Works/type-challenges",

  "emmet.showSuggestionsAsSnippets": true,
  "emmet.triggerExpansionOnTab": false,
  "errorLens.enabledDiagnosticLevels": ["warning", "error"],
  "errorLens.excludeBySource": ["cSpell", "eslint"],

  "eslint.codeAction.showDocumentation": {
    "enable": true
  },
  "eslint.quiet": true,

  "cSpell.allowCompoundWords": true,
  "cSpell.language": "en,en-US",
  "cSpell.userWords": [
    "antfu",
    "btn",
    "clsx",
    "dotfiles",
    "iconify",
    "leetcode",
    "lucide",
    "mancuoj",
    "nextui",
    "nums",
    "tailwindcss",
    "typecheck",
    "vitepress"
  ],

  "css.lint.unknownAtRules": "ignore",
  "sortcss.sortOnSave": true,
  "sortcss.sortingStrategy": "smacss",
  "tailwind-raw-reorder.runOnSave": true,
  "tailwind-raw-reorder.IgnoreConfigNotFound": true,
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.experimental.classRegex": [
    ["clsx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],

  "leetcode.endpoint": "leetcode-cn",
  "leetcode.defaultLanguage": "javascript",
  "leetcode.showDescription": "In Webview",
  "leetcode.useWsl": true,
  "leetcode.workspaceFolder": "/home/mancuoj/Works/leetcode",
  "leetcode.hint.configWebviewMarkdown": false,
  "leetcode.hint.commentDescription": false,
  "leetcode.hint.commandShortcut": false,
  "leetcode.hint.setDefaultLanguage": false,

  "codeium.enableCodeLens": false,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": true
  },

  // Formatters
  "editor.formatOnSave": true,
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "prettier.printWidth": 120,
  "prettier.trailingComma": "all",
  "[json][jsonc][html][css][markdown][javascript][javascriptreact][typescript][typescriptreact][vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },

  // Others
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",

  "git.confirmSync": false,
  "githubIssues.workingIssueFormatScm": "#${issueNumberLabel}",
  "githubPullRequests.fileListLayout": "tree",

  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.recentChange.enabled": false,
  "gitlens.menus": {
    "editor": {
      "blame": false,
      "clipboard": true,
      "compare": true,
      "history": false,
      "remote": false
    },
    "editorGroup": {
      "blame": true,
      "compare": false
    },
    "editorTab": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": true
    },
    "explorer": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": true
    },
    "scm": {
      "authors": true
    },
    "scmGroup": {
      "compare": true,
      "openClose": true,
      "stash": true
    },
    "scmGroupInline": {
      "stash": true
    },
    "scmItem": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": false,
      "stash": true
    }
  },

  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.readonlyFromPermissions": true,
  "files.readonlyInclude": {
    "**/node_modules/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/yarn.lock": true
  },
  "search.exclude": {
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/yarn.lock": true
  },

  "workbench.editorAssociations": {
    "*.db": "sqlite-viewer.option"
  },

  // Editor
  "editor.fontFamily": "'Nova Nerd Font', 'Input Mono', 'MonoLisa', 'Monaspace Xenon', '霞鹜文楷'",
  "editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'ss06', 'zero'",
  "editor.tabSize": 2,
  "editor.fontSize": 18,
  "editor.fontWeight": "700",
  "editor.lineHeight": 1.8,
  "editor.lineNumbers": "interval",
  "editor.mouseWheelZoom": true,
  "editor.suggestSelection": "first",
  "editor.suggest.insertMode": "replace",
  "editor.guides.indentation": false,
  "editor.guides.bracketPairs": false,
  "editor.linkedEditing": true,
  "editor.dragAndDrop": false,
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "name": "Comment Italics",
        "scope": ["comment", "punctuation.definition.comment"],
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },

  // Terminal
  "terminal.integrated.fontFamily": "'Mononoki Nerd Font', 'Maple UI'",
  "terminal.integrated.lineHeight": 1.35,
  "terminal.integrated.mouseWheelZoom": true,
  "terminal.integrated.allowChords": false,

  // Smooth
  "editor.smoothScrolling": true,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "terminal.integrated.smoothScrolling": true,
  "workbench.list.smoothScrolling": true,

  // Explorer
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.confirmPasteNative": false,
  "explorer.compactFolders": false,

  // Workbench
  "window.zoomLevel": 1,
  "editor.minimap.enabled": false,
  "breadcrumbs.enabled": false,
  "security.workspace.trust.enabled": false,
  "window.menuBarVisibility": "toggle",
  "workbench.startupEditor": "none",
  "workbench.layoutControl.enabled": false,
  "workbench.editor.closeOnFileDelete": true,
  "workbench.tree.enableStickyScroll": true,
  "workbench.activityBar.location": "top",
  "workbench.sideBar.location": "left",
  "workbench.productIconTheme": "icons-carbon",
  "window.autoDetectColorScheme": true,
  "workbench.preferredLightColorTheme": "Default Light Modern",
  "workbench.preferredDarkColorTheme": "Moegi Black",
  "workbench.iconTheme": "symbols",
  "workbench.colorTheme": "Monospace Dark"
}
