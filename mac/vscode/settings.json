{
  "editor.fontFamily": "Monaspace Argon, LXGW Bright Code",
  "editor.fontSize": 16,
  "editor.lineHeight": 1.9,
  "editor.fontWeight": "500",
  "editor.fontLigatures": "ss01, ss02, ss03, ss06, zero",
  "editor.tabSize": 2,
  "editor.mouseWheelZoom": false,

  "terminal.integrated.fontFamily": "Mononoki Nerd Font",
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.lineHeight": 1.2,
  "terminal.integrated.allowChords": false,
  "terminal.integrated.cursorStyle": "line",

  "editor.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "solid",
  "workbench.list.smoothScrolling": true,
  "terminal.integrated.smoothScrolling": true,

  "editor.lineNumbers": "interval",
  "editor.guides.indentation": false,
  "editor.guides.bracketPairs": false,
  "editor.matchBrackets": "never",
  "editor.suggestSelection": "first",
  "editor.suggest.insertMode": "replace",
  "editor.linkedEditing": true,
  "editor.dragAndDrop": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.confirmPasteNative": false,
  "explorer.compactFolders": true,
  "editor.quickSuggestions": {
    "strings": "on"
  },

  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "none",
  "editor.renderLineHighlight": "gutter",
  "editor.accessibilitySupport": "off",
  "editor.lightbulb.enabled": "off",
  "editor.showFoldingControls": "never",
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.verticalScrollbarSize": 10,
  "editor.scrollbar.horizontal": "hidden",

  "extensions.ignoreRecommendations": true,
  "extensions.autoUpdate": "onlyEnabledExtensions",

  "workbench.editor.tabActionLocation": "left",
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.editor.limit.value": 5,
  "workbench.tree.enableStickyScroll": true,
  "workbench.tree.indent": 10,
  "workbench.tree.renderIndentGuides": "none",

  "window.zoomLevel": 0.45,
  "breadcrumbs.enabled": false,
  "security.workspace.trust.enabled": false,
  "workbench.tips.enabled": false,
  "workbench.startupEditor": "none",
  "workbench.layoutControl.enabled": false,
  "workbench.sideBar.location": "left",
  "workbench.activityBar.location": "top",
  "window.commandCenter": false,

  "editor.formatOnSave": false,
  "prettier.enable": true,
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "prettier.printWidth": 100,
  "prettier.trailingComma": "all",
  "[json][jsonc][html][css][javascript][javascriptreact][typescript][typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },
  "[python]": {
    "editor.tabSize": 4,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "notebook.formatOnSave.enabled": true,
  "notebook.codeActionsOnSave": {
    "notebook.source.fixAll": "explicit",
    "notebook.source.organizeImports": "explicit"
  },
  "[go]": {
    "editor.tabSize": 4
  },

  "css.lint.unknownAtRules": "ignore",
  "css.lint.hexColorLength": "ignore",
  "sortcss.sortOnSave": true,
  "sortcss.sortingStrategy": "smacss",
  "tailwind-raw-reorder.runOnSave": true,
  "tailwind-raw-reorder.IgnoreConfigNotFound": true,
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.experimental.classRegex": [
    ["clsx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],

  "errorLens.enabledDiagnosticLevels": ["error", "warning"],
  "errorLens.excludeBySource": ["cSpell", "eslint"],

  "cSpell.allowCompoundWords": true,
  "cSpell.language": "en,en-US",

  "files.eol": "\n",
  "files.autoSave": "off",
  "files.insertFinalNewline": true,
  "files.simpleDialog.enable": true,
  "files.readonlyFromPermissions": true,
  "files.readonlyInclude": {
    "**/node_modules/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/yarn.lock": true
  },
  "search.exclude": {
    "**/*.snap": true,
    "**/*.svg": true,
    "**/.git": true,
    "**/.github": false,
    "**/.nuxt": true,
    "**/.output": true,
    "**/.pnpm": true,
    "**/.vscode": true,
    "**/.yarn": true,
    "**/assets": true,
    "**/bower_components": true,
    "**/dist/**": true,
    "**/logs": true,
    "**/node_modules": true,
    "**/out/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/public": true,
    "**/temp": true,
    "**/yarn.lock": true,
    "**/CHANGELOG*": true,
    "**/LICENSE*": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },

  "git.autofetch": true,
  "git.autoStash": true,
  "git.confirmSync": false,
  "git.untrackedChanges": "separate",
  "scm.diffDecorationsGutterWidth": 2,
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.codeLens.recentChange.enabled": false,
  "gitlens.currentLine.enabled": false,

  "workbench.iconTheme": "file-icons",
  "symbols.hidesExplorerArrows": true,
  "window.autoDetectColorScheme": true,
  "workbench.preferredLightColorTheme": "GitHub Light Default",
  "workbench.preferredDarkColorTheme": "Vesper",
  "typescript.updateImportsOnFileMove.enabled": "never"
}
