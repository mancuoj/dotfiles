{
    // smooth
    "editor.cursorBlinking": "smooth",
    "editor.smoothScrolling": true,
    "editor.cursorSmoothCaretAnimation": true,
    "workbench.list.smoothScrolling": true,
    // terminal
    "terminal.integrated.smoothScrolling": true,
    "terminal.integrated.fontFamily": "Maple Mono NF",
    "terminal.integrated.fontSize": 18,
    "terminal.integrated.lineHeight": 1.5,
    "terminal.integrated.cursorStyle": "line",
    // common
    "editor.fontSize": 18,
    // "editor.fontFamily": "更纱黑体 Mono SC Nerd",
    // "editor.fontFamily": "'Maple Mono NF', '霞鹜文楷 GB 屏幕阅读版'",
    // "editor.fontFamily": "Maple Hand",
    // "editor.fontFamily": "Agave, '霞鹜文楷'",
    "editor.fontFamily": "'Dank Mono', '霞鹜文楷'",
    "editor.fontLigatures": true,
    "editor.lineHeight": 1.7,
    "editor.mouseWheelZoom": true,
    "editor.lineNumbers": "interval",
    "editor.inlineSuggest.enabled": true,
    "editor.minimap.enabled": false,
    "editor.stickyScroll.enabled": true,
    "window.commandCenter": true,
    "workbench.editor.tabCloseButton": "left",
}